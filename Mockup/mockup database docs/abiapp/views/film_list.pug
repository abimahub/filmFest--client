extends layout

block content
  h1= title
  
  ul
    - film_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each film in film_list
      li 
        a(href=film.url) #{film.title} 
        |  (#{film.location.name})

    else
      li There are no films.