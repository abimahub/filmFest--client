extends layout

block content
  h1= title

  ul
    each val in filminstance_list
      li 
        a(href=val.url) #{val.film.title} : #{val.location} - 
        if val.status=='Available'
          span.text-success #{val.status}
        else if val.status=='Sold Out'
          span.text-danger #{val.status}
        else
          span.text-warning #{val.status} 
        if val.status!='Available'
          // span  (Due: #{val.due_back} )
          span  (Date: #{val.date} )
    else
      li There are currently no film screenings.